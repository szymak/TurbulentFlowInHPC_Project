<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <flow Re="1000" />
    <simulation finalTime="10.0" >
      <type>turbulence</type>
      <boundary_layer>turbulent</boundary_layer>
        <scenario>channel</scenario>
    </simulation>
    <backwardFacingStep xRatio="0.5" yRatio="0.5" />
    <timestep dt="1" tau="0.5" />
    <solver gamma="0.5" />
    <geometry
      dim="3"
      lengthX="5.0" lengthY="1.0" lengthZ="1.0"
      sizeX="40" sizeY="20" sizeZ="20"
      stretchX="false" stretchY="true" stretchZ="true"
    >
      <mesh>uniform</mesh>
      <!--mesh>stretched</mesh-->
    </geometry>
    <environment gx="0" gy="0" gz="0" />
    <walls>
        <left>
            <vector x="1.0" y="0" z="0" />
        </left>
        <right>
            <vector x="0" y="0" z="0" />
        </right>
        <top>
            <vector x="0.0" y="0." z="0." />
        </top>
        <bottom>
            <vector x="0" y="0" z="0" />
        </bottom>
        <front>
            <vector x="0" y="0" z="0" />
        </front>
        <back>
            <vector x="0" y="0" z="0" />
        </back>
    </walls>
    <vtk interval="0.0001">channel_result</vtk>
    <stdOut interval="0.0001" />
    <parallel numProcessorsX="4" numProcessorsY="4" numProcessorsZ="4" />
</configuration>
